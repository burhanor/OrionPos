@model LoginDto
@{
    Layout = null;
}


<!DOCTYPE html>

<html  class="login-page">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/css/loginpage.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

</head>
<body>
    <partial name="_Scripts" />
    <div>
        <div class="row mt-5 pt-5">
            <div class="col-12 col-md-6">
                <div class="login-title">
                    ORIONPOS TELEFON REHBERİ
                </div>
            </div>
        </div>
        <div class="row">

            <form asp-action="Login" asp-controller="Auth" method="post">


                <div class="col-12 offset-md-6 col-md-6 ">
                    <div class="mb-3 row">
                        <label asp-for="UserName" class="col-sm-2 login-label col-form-label">Kullanıcı Adı</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" asp-for="UserName">
                        </div>
                        <div class="offset-sm-2"></div>

                    </div>
                    <div class="mb-3 row">
                        <label asp-for="Password" class="col-sm-2 login-label col-form-label">Şifre</label>
                        <div class="col-sm-8 ">
                            <input type="password" class="form-control" asp-for="Password">
                        </div>
                        <div class="offset-sm-2"></div>

                    </div>
                    <div class="mb-3 row">
                        <div class="col-10 checkbox text-end">
                            <label class="login-label" asp-for="RememberMe">
                                <span>Beni Hatırla</span>
                            </label>
                            <input type="checkbox" asp-for="RememberMe" class="checkbox login-checkbox style-2 pull-right" />
                        </div>
                        <div class="offset-sm-2"></div>

                    </div>

                    <input type="submit" class="d-none" id="loginSubmitButton" />

                </div>
            </form>
            <div asp-validation-summary="ModelOnly">

            </div>
        </div>
    </div>

    @await Component.InvokeAsync("Notyf")
    @await Component.InvokeAsync("Toastify")

</body>
</html>
